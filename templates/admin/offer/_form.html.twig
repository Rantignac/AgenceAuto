{{ form_start(form) }}
<div class="row">
    <div class="col-md-4">{{ form_row(form.title) }}</div>
    <div class="col-md-4">{{ form_row(form.description) }}</div>
    <div class="col-md-4">{{ form_row(form.miles) }}</div>
    <div class="col-md-4">{{ form_row(form.color) }}</div>
    <div class="col-md-4">{{ form_row(form.price) }}</div>
</div>

<div class="row">

    <div class="col-md-3">{{ form_row(form.postal_code) }}</div>
    <div class="col-md-3">{{ form_row(form.city) }}</div>
    <div class="col-md-2">{{ form_row(form.sold) }}</div>

</div>
{{ form_widget(form) }}
<button class="btn btn-primary">{{ button|default('Enregister') }}</button>
{{ form_end(form) }}
</div>
