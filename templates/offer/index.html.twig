{% extends "base.html.twig" %}
{% block title 'Toutes nos offres' %}
{% block body %}

    <div class="jumbotron">
        <div class="container">
            {{ form_start(form) }}
            <div class="form-row">
                <div class="col">
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col">
                    <button class="btn btn-primary">Rechercher</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="container mt-4">
        <h1> Voir toutes nos offres </h1>

        <div class="row">
            {% for offer in offers %}
                <div class="col-md-4">
                    {% include 'offer/_offer.html.twig' %}
                </div>

            {% endfor %}
        </div>
        <div class="pagination">
            {{ knp_pagination_render(offers) }}
        </div>

    </div>

{% endblock %}